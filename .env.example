# =============================================================================
# AURORA Tax Classifier - Environment Configuration Template
# =============================================================================
# Copy this file to create your environment-specific configurations:
#   - .env.development (for local development)
#   - .env.production (for production deployment)
#   - .env (loaded by default, DO NOT commit to version control)
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
# Application environment: development, staging, production
NODE_ENV=development
APP_NAME=AURORA Tax Classifier
APP_VERSION=2.0.1

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# SQLite (for development/testing)
DATABASE_URL=sqlite:///./aurora.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@host:port/database
# Example: postgresql://aurora:SecurePassword123@postgres:5432/aurora

# PostgreSQL specific settings (used by docker-compose)
POSTGRES_USER=aurora
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=aurora
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# API AUTHENTICATION
# -----------------------------------------------------------------------------
# Backend API Key (REQUIRED - change in production!)
# Generate a secure key: openssl rand -hex 32
API_KEY=aurora-dev-key-change-in-production

# Clerk Authentication (optional - for user management)
# Get keys from: https://clerk.com/
# Frontend (Vite) - starts with VITE_ prefix
VITE_CLERK_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Backend - Clerk secret key for API verification
CLERK_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Webhook secret for Clerk events (optional)
CLERK_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# -----------------------------------------------------------------------------
# EXTERNAL API KEYS
# -----------------------------------------------------------------------------
# Anthropic API (optional - for enhanced AI features)
# Get key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Resend Email Service (optional - for notifications)
# Get key from: https://resend.com/
RESEND_API_KEY=
RESEND_FROM_EMAIL=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# APPLICATION URLS
# -----------------------------------------------------------------------------
# Backend API URL
BACKEND_URL=http://localhost:8000
VITE_API_BASE_URL=http://localhost:8000

# Frontend URL
FRONTEND_URL=http://localhost:3000
VITE_APP_URL=http://localhost:3000

# CORS Origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# DOCKER PORT CONFIGURATION
# -----------------------------------------------------------------------------
# Host ports for Docker services
BACKEND_PORT=8000
FRONTEND_PORT=3000

# -----------------------------------------------------------------------------
# FILE STORAGE CONFIGURATION
# -----------------------------------------------------------------------------
# Local storage path for uploaded files and results
STORAGE_PATH=./storage

# Maximum file upload size (in MB)
MAX_FILE_SIZE_MB=10

# Allowed file extensions (comma-separated)
ALLOWED_FILE_EXTENSIONS=.csv,.xlsx,.xls

# -----------------------------------------------------------------------------
# MODEL CONFIGURATION
# -----------------------------------------------------------------------------
# Model versioning for audit trails
MODEL_VERSION=baseline-v1.0
PREPROCESSING_VERSION=1.0
SCORING_VERSION=1.0

# Model paths (relative to backend directory)
FISCAL_MODEL_PATH=models/koreksi_fiskal_lr.joblib
TAX_OBJECT_MODEL_PATH=models/objek_pph_lr.joblib

# -----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json, text
LOG_FORMAT=json

# Enable request/response logging
LOG_REQUESTS=true

# Log file path (optional - if not set, logs to stdout only)
LOG_FILE_PATH=

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------
# Enable HTTPS redirect (production only)
FORCE_HTTPS=false

# Session secret for cookie signing
SESSION_SECRET=change-this-secret-key

# CSRF token secret
CSRF_SECRET=change-this-csrf-secret

# Enable rate limiting
ENABLE_RATE_LIMIT=true

# Rate limit: requests per minute
RATE_LIMIT_PER_MINUTE=100

# -----------------------------------------------------------------------------
# FRONTEND ENVIRONMENT VARIABLES (Vite)
# -----------------------------------------------------------------------------
# Application name displayed in UI
VITE_APP_NAME=AURORA Tax Classifier

# Enable debug mode in frontend
VITE_DEBUG_MODE=false

# API timeout (milliseconds)
VITE_API_TIMEOUT=30000

# Enable analytics (optional)
VITE_ENABLE_ANALYTICS=false

# Google Analytics ID (optional)
VITE_GA_TRACKING_ID=

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION (if using Resend)
# -----------------------------------------------------------------------------
# Email templates
EMAIL_TEMPLATE_DIR=./templates/email

# Send email notifications
ENABLE_EMAIL_NOTIFICATIONS=false

# Admin notification email
ADMIN_EMAIL=admin@yourdomain.com

# -----------------------------------------------------------------------------
# MONITORING & OBSERVABILITY (optional)
# -----------------------------------------------------------------------------
# Sentry DSN for error tracking
SENTRY_DSN=

# Sentry environment
SENTRY_ENVIRONMENT=development

# Enable performance monitoring
SENTRY_TRACES_SAMPLE_RATE=0.1

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
# Enable direct text analysis feature
ENABLE_DIRECT_ANALYSIS=true

# Enable risk reporting
ENABLE_RISK_REPORTS=true

# Enable explainability features
ENABLE_EXPLAINABILITY=true

# Enable job history
ENABLE_JOB_HISTORY=true

# Maximum jobs to keep in history
MAX_HISTORY_JOBS=100

# -----------------------------------------------------------------------------
# BACKUP CONFIGURATION (optional)
# -----------------------------------------------------------------------------
# Enable automatic backups
ENABLE_AUTO_BACKUP=false

# Backup directory
BACKUP_DIR=./backups

# Backup retention days
BACKUP_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# DEVELOPMENT SETTINGS (development only)
# -----------------------------------------------------------------------------
# Enable hot reload
HOT_RELOAD=true

# Enable debug toolbar
DEBUG_TOOLBAR=false

# Seed database on startup
SEED_DATABASE=false

# -----------------------------------------------------------------------------
# NOTES
# -----------------------------------------------------------------------------
# 1. Never commit actual .env files to version control
# 2. Use strong, unique passwords and API keys in production
# 3. Review all settings before deploying to production
# 4. Keep this template file updated when adding new variables
# 5. Use environment-specific files (.env.development, .env.production)
# =============================================================================
